{
    "$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
    "files": {
      "ignore": ["node_modules/*"]
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2
    },
    "organizeImports": {
      "enabled": true
    },
    "linter": {
      "enabled": true,
      "rules": {
        "recommended": true,
        "correctness": {
          "noUndeclaredVariables": "error",
          "noUnusedVariables": "error"
        },
        "style": {
          "noNamespace": "error",
          "useShorthandFunctionType": "off"
        }
      }
    }
  }